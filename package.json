{
  "name": "blueprintdata",
  "private": true,
  "version": "2.0.0",
  "description": "BlueprintData CLI and Analytics Agent Platform",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/@blueprintdata/*"
  ],
  "scripts": {
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter './packages/**' build",
    "build:apps": "bun run --filter './apps/**' build",
    "build:cli": "bun run --filter 'blueprintdata-cli' build",
    "build:web": "bun run --filter '@blueprintdata/web' build",
    "dev": "bun run --filter './apps/**' dev",
    "dev:cli": "bun run --filter 'blueprintdata-cli' dev",
    "dev:web": "bun run --filter '@blueprintdata/web' dev",
    "test": "bun test --filter './packages/**' --filter './apps/**'",
    "test:packages": "bun test --filter './packages/**'",
    "test:apps": "bun test --filter './apps/**'",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:packages": "bun run --filter './packages/**' typecheck",
    "typecheck:apps": "bun run --filter './apps/**' typecheck",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish",
    "link": "bun run link:packages && bun run link:cli",
    "link:packages": "cd packages/@blueprintdata/models && bun link && cd ../errors && bun link && cd ../config && bun link && cd ../warehouse && bun link && cd ../analytics && bun link && cd ../gateway && bun link",
    "link:cli": "cd apps/cli && bun link",
    "unlink": "bun run unlink:packages && bun run unlink:cli",
    "unlink:packages": "cd packages/@blueprintdata/models && bun unlink && cd ../errors && bun unlink && cd ../config && bun unlink && cd ../warehouse && bun unlink && cd ../analytics && bun unlink && cd ../gateway && bun unlink",
    "unlink:cli": "cd apps/cli && bun unlink",
    "local-install": "bun install && bun run build:packages && bun run link",
    "link:npm": "./scripts/setup-npm-links.sh",
    "unlink:npm": "./scripts/unlink-npm.sh",
    "local-install:npm": "npm install && npm run build:packages && npm run link:npm",
    "verify-local": "node scripts/verify-local.js",
    "watch": "bun run --filter './packages/**' --filter './apps/**' dev"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
