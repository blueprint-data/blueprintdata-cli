{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "scripts/**/*.js",
    "*.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}
